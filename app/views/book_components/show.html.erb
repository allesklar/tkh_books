<%= render 'metas', book_component: @book_component %>

<p id="internal-links"><%= link_to "<span class='glyphicon glyphicon-list'></span> table of contents".html_safe, "#table-of-contents", class: 'btn btn-default' %></p>

<h1>
  <%= content_tag :span, "Chapter #{@book_component.chapter_number}<br />".html_safe, id: 'chapter-number' if @book_component.chapter? %>
  <%= @book_component.name %>
</h1>

<p><%= raw @book_component.body %></p>

<%= render 'books/table_of_contents', book: @book_component.book %>
<%= content_tag :p, link_to("<span class='glyphicon glyphicon-eye-open'></span> admin view".html_safe, admin_view_book_path(@book_component.book), class: 'btn btn-default') if current_user && current_user.is_allowed_to?('write_books') %>
