<%= simple_form_for @book, :html => { role: 'form' } do |f| %>
  <%= f.error_notification %>

    <%= f.input :title, input_html: { size: 45 } %>

    <%= f.input :subtitle,
                hint: "Some books have a longer title displayed on the cover. Like a tagline",
                input_html: { size: 45 } %>

    <%= f.input :author_name, input_html: { size: 45 } %>

    <%= f.input :description, input_html: { cols: 45, rows: 3 } %>

    <%= f.input :author_notes,
                hint: "Only seen by author or editor. Can be used to map out the table of contents",
                input_html: { class: 'tinymce' } %>
    <%= tinymce selector: 'textarea.tinymce',
                branding: false,
                # context_menu: "link image imagetools table spellchecker",
                height: 550,
                menubar: false, # hiding menu items duplicating icons
                plugins: "lists link image code fullscreen",
                toolbar: "formatselect bold italic strikethrough | bullist numlist | alignleft aligncenter alignright alignnone | link unlink image | undo redo selectall code fullscreen"
    %>

    <%= f.button :submit, class: 'btn btn-primary' %>

<% end %>
